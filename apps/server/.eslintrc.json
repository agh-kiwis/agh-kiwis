{
  "extends": ["../../.eslintrc.json"],
  // We don't need to check eslint for tests by now
  "ignorePatterns": ["!**/*", "tests"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "no-unused-vars": 0
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
