{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "agh-kiwis",
  "affected": {
    "defaultBase": "main"
  },
  "cli": {
    "defaultCollection": "@nrwl/nest"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/workspace/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e"]
      }
    }
  },
  // Cloud task running
  // "tasksRunnerOptions": {
  //   "default": {
  //     "runner": "@nrwl/nx-cloud",
  //     "options": {
  //       "cacheableOperations": ["build", "lint", "test", "e2e"]
  //       // There we need to pass access_token later on
  //       // "accessToken": ${NX_CLOUD_AUTH_TOKEN}
  //     }
  //   }
  // },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ]
  },
  "defaultProject": "server",
  "generators": {
    "@nrwl/react": {
      "application": {
        "babel": true
      }
    },
    "@nrwl/next": {
      "application": {
        "style": "css",
        "linter": "eslint"
      }
    }
  }
}
